<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    id="view1">
       <Page id="idPage" title="Employee Records">
    <content>

      <Toolbar id="idToolbar">
        <Title id="idTitle" text="Employee Records" />
        <ToolbarSpacer id="idSpacer" />
        <Button id="idRefreshBtn" text="Refresh" press=".onRefresh" />
      </Toolbar>

      <Table
        id="idEmployeeTable"
        inset="false"
        growing="true"
        growingScrollToLoad="true"
        mode="SingleSelectLeft"
        items="{ path: '/Employees' }">

        <columns>
          <Column id="idColEmpid"><Text id="idTextEmpidHeader" text="Employee ID"/></Column>
          <Column id="idColEmpname"><Text id="idTextEmpnameHeader" text="Name"/></Column>
          <Column id="idColDept"><Text id="idTextDeptHeader" text="Department"/></Column>
          <Column id="idColLocation"><Text id="idTextLocationHeader" text="Location"/></Column>
          <Column id="idColSalary" hAlign="End"><Text id="idTextSalaryHeader" text="Salary"/></Column>
        </columns>

        <items>
          <ColumnListItem id="idEmployeeRow">
            <cells>
              <Text id="idTxtEmpid" text="{Empid}" />
              <Text id="idTxtEmpname" text="{Empname}" />
              <Text id="idTxtDept" text="{Dept}" />
              <Text id="idTxtLocation" text="{Location}" />
              <ObjectNumber id="idTxtSalary" number="{Salary}" />
            </cells>
          </ColumnListItem>
        </items>

      </Table>

    </content>
  </Page>
</mvc:View>